<mvc:View controllerName="project1120.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:c="sap.ui.core"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:core="sap.ui.core">

    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="조회조건" level="H1"/>
                </f:heading>
                <f:actions>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <fb:FilterBar id="filterbar" persistencyKey="myPersKey" filterContainerWidth="8rem" useToolbar="false" 
                    search="onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad" showFilterConfiguration= "false">
                    <fb:filterGroupItems>
                        <fb:FilterGroupItem name="G/L 계정" label="G/L 계정번호" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <ComboBox
                                    id="idRacct"
                                    showSecondaryValues="true"
                                    items="{
                                        path: '/SumSet'
                                         
                                    }">
                                    <core:ListItem key="{Racct}" text="{Racct}" additionalText="{GlNm}" />
                                </ComboBox>
                            </fb:control>
                        </fb:FilterGroupItem>
                        <!-- <fb:FilterGroupItem name="전기일" label="전기일" groupName="Group1" visibleInFilterBar="true">
                            <fb:control>
                                <DateRangeSelection
                                    id="DRP1"
                                    change="handleChange"
                                    class="DRS1"
                                    dateValue="{/start}"
                                    secondDateValue="{/end}"
                                    valueFormat="yyyy-MM-dd"
                                    displayFormat="yyyy.MM.dd"/>
                            </fb:control>
                        </fb:FilterGroupItem> -->
                    </fb:filterGroupItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <viz:VizFrame id="idChart" width="100%" height="100%"
                selectData="onChartSelectData"
                vizType="donut"
                uiConfig="{'applicationSet' : 'fiori'}"
                vizProperties="{
                    'title' : {'visible' : false, 'text' : 'value'}
                }">
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/SumSet}" id="idDataset" >
                        <!-- x축 -->
                        <viz.data:dimensions>
                            <!-- <viz.data:DimensionDefinition name="G/L 계정번호" value="{Racct}"/>                             -->
                            <viz.data:DimensionDefinition name="G/L 계정명" value="{GlNm}"/>
                        </viz.data:dimensions>
                        <!-- y축 -->
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="총 금액" value="{TotalAmount}"/>
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>
                <viz:feeds>
                    <viz.feeds:FeedItem uid="color" type="Dimension" values="G/L 계정명"/>
                    <viz.feeds:FeedItem uid="size" type="Measure" values="총 금액" />
                </viz:feeds>
                <viz:dependents>
                    <viz:Popover id="idPopOver" ></viz:Popover> 
                </viz:dependents>
            </viz:VizFrame>
        </f:content>
    </f:DynamicPage>
</mvc:View>
