<mvc:View controllerName="sync.project1107.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table">
    <Page id="page" title="{i18n>title}">
        <VBox >
            <!--Hong Gil dong-->
            <Input value="{/inpValue}"/> <!--World-->
            <Button text="모델 세팅" press="onSetData"/>
            <Text text="{test>/textValue}" /> <!--Hello-->
            <!-- <Button text="이름 변경" press="onClick"/> -->
            
        </VBox>

        <t:Table
            rows="{test>/datas}"
            selectionMode="MultiToggle"
            paste="onPaste"
            ariaLabelledBy="title">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <Title id="title" text="Products"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column width="11rem">
                    <Label text="Name" />
                    <t:template>
                        <Text text="{test>name}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
            <t:columns>
                <t:Column width="11rem">
                    <Label text="age" />
                    <t:template>
                        <Text text="{test>age}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
            <t:columns>
                <t:Column width="11rem">
                    <Label text="tel" />
                    <t:template>
                        <Text text="{test>tel}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </Page>
</mvc:View>
